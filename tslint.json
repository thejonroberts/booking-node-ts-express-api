{
  "defaultSeverity": "error",
  "extends": [
    "tslint:latest",
    "tslint-eslint-rules",
    "tslint-sonarts",
    "tslint-config-prettier"
  ],
  "rules": {
    "max-line-length": [true, 100],
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "always"
        },
        "singleline": "never",
        "esSpecCompliant": true
      }
    ],
    "no-unused-variable": false
  },
  "rulesDirectory": []
}
