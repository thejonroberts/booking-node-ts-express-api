{
  "defaultSeverity": "error",
  "rulesDirectory": ["tslint-plugin-prettier"],
  "extends": [
    "tslint:latest",
    "tslint-eslint-rules",
    "tslint-sonarts",
    "tslint-config-prettier"
  ],
  "rules": {
    "no-unused-variable": false,
    "prettier": [
      true,
      {
        "printWidth": 80,
        "tabWidth": 2,
        "singleQuote": true,
        "trailingComma": {
          "array": true,
          "object": true,
          "function": false
        }
      }
    ]
  }
}
