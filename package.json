{
  "name": "booking-node-api",
  "version": "1.0.0",
  "description": "a quick api to run some experiments with",
  "repository": {
    "type": "git",
    "url": "https://github.com/thejonroberts/booking-node-api"
  },
  "engines": {
    "node": "10.2.1"
  },
  "main": "server.js",
  "scripts": {
    "lint": "node_modules/.bin/tslint --project . --fix",
    "start": "npm run serve",
    "serve": "node dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "dev": "DEBUG=express:* nodemon server.js",
    "build": "npm run lint && npm run build-ts",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "watch": "concurrently -k \"npm:watch-*\"",
    "test": "nyc --reporter=html --reporter=text mocha --exit",
    "dev-test": "NODE_ENV=testing mocha --watch --recursive test/**/*.test.js -R spec",

    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "faker": "node data/generation/generate-json-data.js",
    "teardown": "node_modules/.bin/sequelize db:migrate:undo:all",
    "migrate": "node_modules/.bin/sequelize db:migrate",
    "seed": "node_modules/.bin/sequelize db:seed:all",
    "reset": "npm run teardown && npm run migrate && npm run seed",
    "heroku-build": "npm install && npm run build"
  },
  "author": "Jon Roberts",
  "license": "ISC",
  "dependencies": {
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.18.3",
    "concurrently": "^3.6.0",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "express-session": "^1.15.6",
    "express-validator": "^5.2.0",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "pg": "^7.4.3",
    "pg-hstore": "^2.3.2",
    "sequelize": "^4.37.10"
  },
  "devDependencies": {
    "@types/bcrypt-nodejs": "0.0.30",
    "@types/body-parser": "^1.17.0",
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.16.0",
    "@types/express-session": "^1.15.10",
    "@types/passport": "^0.4.5",
    "@types/passport-local": "^1.0.33",
    "@types/pg": "^7.4.9",
    "@types/sequelize": "^4.27.21",
    "chai": "^4.1.2",
    "coveralls": "^3.0.1",
    "faker": "^4.1.0",
    "markdownlint": "^0.10.0",
    "mocha": "^5.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.17.5",
    "nyc": "^12.0.2",
    "sequelize-cli": "^4.0.0",
    "supertest": "^3.1.0",
    "tslint": "^5.10.0",
    "tslint-eslint-rules": "^5.3.1",
    "tslint-sonarts": "^1.7.0",
    "typescript": "^2.9.2"
  }
}
