{
  "defaultSeverity": "error",
  "extends": ["tslint:latest", "tslint-eslint-rules", "tslint-sonarts"],
  "checkJs": true,
  "rules": {
    "no-unused-variable": false,
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "always"
        },
        "esSpecCompliant": true
      }
    ],
    "quotemark": [true, "single", "avoid-escape", "avoid-template"],
    "no-constant-condition": [true, "warn"],
    "indent": [true, "spaces", 2],
    "linebreak-style": [true, "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-trailing-spaces": true,
    "comma-dangle": [
      "error",
      {
        "arrays": "always-multiline",
        "objects": "always-multiline",
        "imports": "always-multiline",
        "exports": "always-multiline",
        "functions": "never"
      }
    ],
    "arrow-parens": false
  }
}
